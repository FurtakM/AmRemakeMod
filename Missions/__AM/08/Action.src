    begin
        Say(Donaldson, 'D3-Don-1');
    end else
    begin
        DialogRandom(FilterUnitsInArea(GammaSupport, [[f_side, 1], [f_type, unit_human], [f_sex, 1]]), 'D3-Sol1-1', 'D3-Sol1-1');
        Say(JMM, 'D3-JMM-2');
    end; 
    If IsOK(Joan) then
    begin
        Say(Joan, 'D3a-Joan-1');
