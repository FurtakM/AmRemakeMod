// #teamKurt ;)
Export function PrepareKurt;
begin
    uc_side = 8;

    Kurt = PrepareUnit('Kurt', false);
    PlaceUnitArea(Kurt, PlayerSpawn, false);
end;

Export function PrepareLegionForPlayer;
var i, un;
begin
    for i = 1 to 6 do
   begin

      uc_side = 1;
      uc_nation = 2;

      hc_gallery = '';
      hc_name = '';
      PrepareHuman(false, [1, 2, 3, 4][Rand(1, 4)], 10);

      un = CreateHuman;
      PlaceUnitArea(un, PlayerSpawn, false);

   end;

end;